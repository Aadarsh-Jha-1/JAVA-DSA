import java.util.Scanner;

public class Pattern13 {

    public static void main(String[] args) {
  
        Scanner sc = new  Scanner(System.in);

        System.out.println("Enter a number to define numbers of rows to print stars : ");

        int n = sc.nextInt();

        for(int i=1; i<=n; i++){

            
            int j =1;

            while(j<=i){
               
                j++;
            }

            System.out.println();

        }

        sc.close();


    }
}
